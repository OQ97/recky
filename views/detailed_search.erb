<div>
<h2><%= $title %></h2>
<img src="<%= $album_cover_url%>" lead="Album cover for <%= $title %>" height="250">
</div>

<div>
<h2><%= @detail_year%></h2>
<h2><%= @detail_country%></h2>
<h2><%= @detail_text%></h2>
</div>

<div>
